<Page x:Class="TorGuard.Netzwerkkonfig_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TorGuard"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Netzwerkkonfig_Page"
      Background="White">
   
    <!-- Hintergrundfarbe hier gesetzt -->

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Beschriftung und Textfeld für WLAN SSID -->
            <Label Content="WLAN SSID:" Margin="5" HorizontalAlignment="Left"/>
            <TextBox x:Name="txtWlan" Margin="5" Width="200"/>

            <!-- Beschriftung und PasswordBox für WLAN-Passwort -->
            <Label Content="WLAN Passwort:" Margin="5" HorizontalAlignment="Left"/>
            <PasswordBox x:Name="txtWLANpassword" Margin="5" Width="200"/>

            <!-- Speichern und Verlassen Button -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button x:Name="btnSave" Content="Speichern" Margin="5" Click="btnSave_Click"/>
                <Button x:Name="btnExit" Content="Verlassen" Margin="5" Click="btnExit_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
