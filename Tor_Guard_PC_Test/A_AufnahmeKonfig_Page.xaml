<Page x:Class="TorGuard.AufnahmeKonfig_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="AufnahemeKonfiguration" Height="450" Width="800"
      Background="White">

    <Grid Height="450" Width="800">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Stunden pro Datei:" Margin="5"/>
            <TextBox x:Name="txtStundenProDatei" Margin="5" Width="400"/>

            <TextBlock Text="Backup Tage:" Margin="5"/>
            <TextBox x:Name="txtBackupDays" Margin="5" Width="400"/>

            <TextBlock Text="Aktualisierung Server Datei in Minuten:" Margin="5"/>
            <TextBox x:Name="txtSpeicherIntervallMinute" Margin="5" Width="400"/>

            <Button x:Name="SaveButton" Content="Speichern" Margin="5" Width="400" Click="SaveButton_Click"/>
            <Button x:Name="btnExit" Content="Verlassen" Margin="5" Click="btnExit_Click"/>
        </StackPanel>
    </Grid>
</Page>
